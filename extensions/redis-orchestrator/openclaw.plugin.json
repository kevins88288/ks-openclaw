{
  "id": "redis-orchestrator",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "redis": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "host": {
            "type": "string",
            "default": "127.0.0.1"
          },
          "port": {
            "type": "number",
            "default": 6379
          },
          "password": {
            "type": "string"
          },
          "tls": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "circuitBreaker": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "failureThreshold": {
            "type": "number",
            "default": 5
          },
          "resetTimeout": {
            "type": "number",
            "default": 30000
          }
        }
      },
      "rateLimit": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "dispatchesPerMinute": {
            "type": "number",
            "default": 10
          },
          "maxQueueDepth": {
            "type": "number",
            "default": 50
          }
        }
      },
      "dlq": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "alertChannel": {
            "type": "string",
            "default": "discord"
          }
        }
      }
    }
  }
}
