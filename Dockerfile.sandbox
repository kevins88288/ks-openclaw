FROM ubuntu:24.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
  && apt-get install -y --no-install-recommends \
    bash \
    ca-certificates \
    curl \
    git \
    jq \
    python3 \
    ripgrep \
  && rm -rf /var/lib/apt/lists/*

RUN useradd --create-home --shell /bin/bash sandbox

# rtk is bind-mounted from host at /usr/local/bin/rtk
# No need to install here â€” updates on host propagate automatically

USER sandbox
WORKDIR /home/sandbox

CMD ["sleep", "infinity"]
